# Database Configuration
DATABASE_URL=your_database_url_here

# Session Configuration
SESSION_SECRET=your_session_secret_here

# Custom Domain Configuration (optional)
# Set this to your custom domain to display it in server logs
CUSTOM_DOMAIN=www.renthabit.com

# Development/Production Environment
NODE_ENV=development

# Stripe Configuration (for payments)
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here

# Email Configuration (for email verification and notifications)
# Option 1: Gmail (Recommended - easier setup)
GMAIL_USER=your_email@gmail.com
GMAIL_PASS=your_app_password_here

# Option 2: Custom SMTP (Alternative)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@domain.com
SMTP_PASS=your_app_password_here

# Application URL
BASE_URL=https://rent-habit-marketplace-loveallfearnone.replit.app

# SMS Configuration (for phone verification - optional)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# Admin Configuration
ADMIN_EMAIL=admin@renthabit.com